package com.negocio.agenda;

import com.capadatos.agenda.UsuarioDatos;
import com.capaentidades.agenda.Usuario;


public class UsuarioNegocio {

	//Singleton
		public static UsuarioNegocio _Instancia;
		private UsuarioNegocio(){};
		public static UsuarioNegocio Instancia(){
			if(_Instancia==null){
				_Instancia = new UsuarioNegocio();
			}
			return _Instancia;
		}
		//endSingleton
		
	public Usuario VerificarAcceso(String _Usuario, String _Pass) throws Exception {	
		try 
		{
			Usuario u = UsuarioDatos.Instancia().VerificarAcceso(_Usuario, _Pass);
			if(u==null){
				throw new ArithmeticException("Usuario o Password no valido!");
				}
				return u;
		} 
			catch (Exception e) {
			throw e;
		}
	}
	
	
	public boolean InsertarUsuario(Usuario c) throws Exception {	
		try 
		{
			return UsuarioDatos.Instancia().InsertarUsuario(c);
		} 
			catch (Exception e) {
			throw e;
		}
	}
	
	
	
	
	
}
