public  void RegistroContacto() {
		
		String msg="";
		boolean result=false;
		try {
			
		    Contacto contac =  new Contacto();
			contac.setNombre(txtNombre.getText());;
		    contac.setApellido(txtApellidos.getText());
		    contac.setFechaNacimiento(txtFecNac.getText());
		    contac.setGenero(txtGenero.getText());
		    contac.setTelefonoPrincipal(txtTelPrincipal.getText());
		    contac.setTelefonoAuxiliar(txtTelAux.getText());
		    contac.setDireccion(txtDireccion.getText());
		    contac.setDNI(txtDNI.getText());
		    contac.setEmail(txtEmail.getText());
		    contac.setUsuarioID(this.UusarioId);
		    
			
			result = ContactoNegocio.Instancia().InsertarContacto(contac);
			if(result)
				msg = "Registro ingresado exitosamente";
			else
				msg ="Error al momento de ingresar";
					
			//esto esta bien ahora  pr ea loatributos estan bien asi? solo esos nada de ID? ID es autoincrem,ent en bd todo esta bien 
			//ya vez si la haces , perro mira esta parte lo quite, haber
			//ahi limpias las cajas para que ingres
			//ya dale
			//espera ahora dale perro
			
			
		} catch (Exception e) {
			msg = e.getMessage();
		}
		
		JOptionPane.showMessageDialog(null,msg);
		
		if(result)
			this.Parent.ListarContactos(true);
		//LimpiarControles();
		
	}
	
