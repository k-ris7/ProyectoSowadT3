	public  void RegistroUsuario() {
		
		String msg="";
		boolean result;
		try {
			
			Usuario usua =  new Usuario();
			usua.setUsuario(txtUsuario.getText());
			usua.setPassword(txtPassword.getText());
			usua.setNombre(txtNombre.getText());
			
			
			
			result = UsuarioNegocio.Instancia().InsertarUsuario(usua);
			if(result)
				msg = "Registro ingresado exitosamente";
			else
				msg ="Error al momento de ingresar";
					
			
			
			
		} catch (Exception e) {
			msg = e.getMessage();
		}
		
		JOptionPane.showMessageDialog(null,msg);
		
		LimpiarControles();
		
	}
	
	public void LimpiarControles()
	{
		try {
			
			txtUsuario.setText("");
			txtPassword.setText("");
			txtNombre.setText("");
			
		} catch (Exception e) {
			// TODO: handle exception
		}
	}
	

}
